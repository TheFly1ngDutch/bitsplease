
hostname ISP2


interface Loopback0
 ip address 4.4.4.4 255.255.255.255
!
interface Ethernet0/0
 ip address 172.16.20.2 255.255.255.252

ip route 0.0.0.0 0.0.0.0 Null0
!
ip prefix-list TO_ISP1 permit 4.4.4.4/32
ip prefix-list TO_ISP1 permit 172.16.20.0/30

route-map TO_ISP1 permit 10
 match ip address prefix-list TO_ISP1

ip prefix-list TO_Border2 permit 0.0.0.0/0
 
route-map TO_Border2 permit 10
 match ip address prefix-list TO_Border2

router bgp 20
bgp router-id 4.4.4.4
bgp log-neighbor-changes
neighbor 99.1.1.1 remote-as 10
neighbor 99.1.1.1 route-map TO_ISP1 out  

neighbor 172.16.20.1 remote-as 65000 
neighbor 172.16.20.1 route-map TO_Border2 out

network 172.16.20.0 mask 255.255.255.252
network 4.4.4.4 mask 255.255.255.255
network 0.0.0.0

