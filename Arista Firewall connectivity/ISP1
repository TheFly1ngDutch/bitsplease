
hostname ISP1


interface Loopback0
 ip address 3.3.3.3 255.255.255.255
!
interface Ethernet0/0
ip address 172.16.10.2 255.255.255.252

ip route 0.0.0.0 0.0.0.0 Null0

ip prefix-list TO_ISP2 permit 3.3.3.3/32
ip prefix-list TO_ISP2 permit 172.16.10.0/30

route-map TO_ISP2 permit 10
 match ip address prefix-list TO_ISP2

ip prefix-list TO_Border1 permit 0.0.0.0/0

route-map TO_Border1 permit 10
 match ip address prefix-list TO_Border1

router bgp 10
bgp router-id 3.3.3.3
bgp log-neighbor-changes
neighbor 99.1.1.2 remote-as 20
neighbor 99.1.1.2 route-map TO_ISP2 out

neighbor 172.16.10.1 remote-as 65000 
neighbor 172.16.10.1 route-map TO_Border1 out

network 172.16.10.0 mask 255.255.255.252
network 3.3.3.3 mask 255.255.255.255
network 0.0.0.0


